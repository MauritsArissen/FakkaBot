generator client {
  provider = "prisma-client-js"
}

model UserStats {
  uid String @id
  xp  Int
}

model Activity {
  id        Int      @id @default(autoincrement())
  uid       String
  timestamp DateTime @default(now())
  level     Int
}

model ActivityRole {
  rid            String @id
  activityPoints Int
}

model Birthday {
  uid   String @id
  month Int
  day   Int
}

model Settings {
  key   String @id
  value String
}
